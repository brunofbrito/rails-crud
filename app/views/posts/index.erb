<h1 class="text-center text-uppercase">My Awesome Rails Blog</h1>

<% if signed_in? %>
  <%= link_to "Add new", new_post_path %>
  <% @posts.each do |post| %>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= post.body %></p>
      <p><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post_path(post), method: :delete %></p>
    <% end %>
  <%= button_to "Sign out", sign_out_path, method: :delete %>
<% else %>
    <% @posts.each do |post| %>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= post.body %></p>
    <% end %>
  <hr>
  <p>Are you the owner of this amazing creation? <%= link_to "Then sign in", sign_in_path %></p>
<% end %>