<h1>Edit this post</h1>
<%= form_for @post, html: {class: "form-group"} do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  <br></div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Edit", class: "btn btn-primary" %>
<% end %>